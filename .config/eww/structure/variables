(defpoll hour :interval "1s" `date +%I`)
(defpoll minute :interval "1s" `date +%M`)
(defpoll date :interval "1s" `date "+%A, %d %B"`)

(defpoll audio :interval "1s" "structure/scripts/isMuted")
(defpoll notifications :interval "1s" "structure/scripts/isSilent")
(defpoll mic :interval "1s" "structure/scripts/isMic")
(defvar settings-icon "/home/rashad/.config/eww/structure/icons/settings.png")

(defpoll ram :interval "1s" "structure/scripts/getRam")
(defpoll vol :interval "1s" "structure/scripts/getVol")
(defpoll cpu :interval "1s" "structure/scripts/getCpu")
(defpoll bright :interval "2s" "structure/scripts/getBright")

(defpoll uptime :interval "1s" "uptime -p | sed -e 's/up //;s/ hours,/h/;s/ minutes/m/'")
(defpoll packages :interval "1s" "pacman -Q | wc -l")

